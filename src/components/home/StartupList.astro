---
import ProjectList from "./ProjectList.astro";

interface Props {
  title: string;
  projects: { title: string; url: string }[];
  currentProjects: {
    title: string;
    url: string;
    team?: { name: string; url: string }[];
    position: string;
    stack: string[];
  }[];
  landings: { title: string; url: string }[];
}
const { title, projects, currentProjects, landings } = Astro.props;
---

<div class="grid grid-cols-1">
  <div class="flex flex-col gap-2">
    <h3 class="text-2xl leading-8 text-gray-800">{title}</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
      {
        currentProjects.map((project) => (
          <div class="flex flex-col gap-2 w-fit">
            <div class="flex flex-row gap-2 items-center  ">
              <a
                href={project.url}
                target="_blank"
                class="text-lg text-gray-700"
              >
                {project.title}
              </a>
              <>
                {project.team && (
                  <span class="flex flex-row items-center gap-2 text-sm text-gray-500 ">
                    with
                    <a
                      href="https://llucx.is-a.dev/"
                      target="_blank"
                      class=" text-gray-800"
                    >
                      @Lluc
                    </a>
                  </span>
                )}
              </>
            </div>

            <div class="flex flex-row flex-wrap items-center gap-2">
              {project.stack.map((tech) => (
                <span class="text-sm text-gray-500">{tech}</span>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>

<div class="flex flex-col gap-2">
  <h3 class="text-2xl leading-8 text-gray-800">Proyectos</h3>
  <ProjectList projects={projects} />
</div>
<div class="flex flex-col gap-2">
  <h3 class="text-2xl leading-8 text-gray-800">PÃ¡ginas Web</h3>
  <ProjectList projects={landings} />
</div>

<style scoped>
  a {
    cursor: pointer;
    &:hover {
      text-decoration: underline dashed;
      text-underline-offset: 4px;
    }
  }
</style>
