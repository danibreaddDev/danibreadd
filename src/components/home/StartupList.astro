---
interface Props {
  projects: { title: string; url: string }[];
  currentProject?: { title: string; url: string };
}
const { projects, currentProject } = Astro.props;
---

<div class="grid grid-cols-1 gap-5 lg:grid-cols-2">
  <div class="flex flex-col gap-2">
    <h3 class="text-xl font-bold">Current working on</h3>
    <div class="flex flex-row flex-wrap items-center gap-2">
      <a>{currentProject?.title}</a>
      <span class="flex flex-row items-center gap-2"
        >with <a href={currentProject?.url} target="_blank">@Lluc</a></span
      >
    </div>
  </div>

  <div class="flex flex-col gap-2">
    <h3 class="text-xl font-bold">Some past startups</h3>
    <div class="grid grid-cols-1 lg:grid-cols-2">
      {projects.map((project) => <a href={project.url}>{project.title}</a>)}
    </div>
  </div>
</div>
