---
interface Props {
  developer: string;
  description?: string;
}
const { developer, description } = Astro.props;
---

<div class="flex flex-col gap-5">
  <h1 class="text-5xl font-black sm:text-6xl lg:text-7xl xl:text-8xl">
    {developer}
  </h1>
  <h3 class="text-xl font-light leading-7">
    {description}
  </h3>
</div>
