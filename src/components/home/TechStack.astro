---
interface Props {
  title: string;
  techStack: { slug: string; name: string }[];
}
const { techStack, title } = Astro.props;
---

<section class="flex flex-col gap-2">
  <h3 class="text-2xl leading-8 text-gray-800">{title}</h3>

  <div class="flex flex-row flex-wrap items-center gap-5">
    {
      techStack.map((tech) => (
        <span class="text-base text-gray-500">{tech.name}</span>
      ))
    }
  </div>
</section>
