---
import BaseLayout from "../layouts/baseLayout.astro";
import Presentation from "../components/home/Presentation.astro";
import Location from "../components/home/Location.astro";
import Socials from "../components/home/Socials.astro";
import StartupList from "../components/home/StartupList.astro";
import JobPosition from "../components/home/JobPosition.astro";
import TechStack from "../components/home/TechStack.astro";
import projects from "../data/projects.json";
import techs from "../data/techs.json";
---

<BaseLayout>
  <div class="relative flex flex-col gap-10 mx-auto max-w-7xl font-primary">
    <section id="presentation">
      <Presentation developer="Danibreadd" />
      <Location location="Valencia, Spain" />
    </section>
    <section><JobPosition Position="FrontEnd Developer" /></section>
    <section class="grid grid-cols-1 gap-5">
      <div class="flex flex-col gap-5">
        <div class="grid grid-cols-1 gap-5">
          <TechStack
            title="Techs in my current day-to-day work"
            techStack={techs.mainTechs}
          />
          <TechStack title="More techs I use" techStack={techs.otherTechs} />
        </div>
      </div>
    </section>
    <StartupList
      title="Current working on"
      currentProjects={projects.currentProjects}
      projects={projects.projects}
      landings={projects.landings}
    />
    <Socials />
  </div>

  <style is:global>
    a {
      cursor: pointer;
      &:hover {
        text-decoration: underline dashed;
        text-underline-offset: 4px;
      }
    }
  </style>
</BaseLayout>
