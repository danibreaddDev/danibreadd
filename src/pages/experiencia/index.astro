---
import ExperienceCard from "../../components/experience/ExperienceCard.astro";
import experience from "../../data/experience.json";
import BaseLayout from "../../layouts/baseLayout.astro";
import type { iExperience } from "../../lib/interfaces/experience";
const experiences: iExperience[] = experience;
---

<BaseLayout>
  <div class="flex flex-col gap-20 font-secondary">
    <div class="flex flex-col gap-5">
      <h1
        class="font-primary text-5xl sm:text-6xl lg:text-7xl xl:text-8xl font-black"
      >
        Experiencia
      </h1>
      <p class="font-secondary text-base lg:text-lg xl:text-3xl font-normal">
        Aqu√≠ comparto la experiencia que tengo en el sector.
      </p>
    </div>
    <section class="grid grid-cols-1">
      {
        experiences.map((exp: iExperience) => (
          <ExperienceCard experience={exp} />
        ))
      }
    </section>
  </div>
</BaseLayout>
